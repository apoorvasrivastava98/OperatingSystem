echo "Enter three numbers"
read n1 n2 n3
if [ $n1 -gt $n2 -a $n1 -gt $n3 ]
then
echo "Greatest number is" $n1
elif [ $n2 -gt $n1 -a $n2 -gt $n3 ]
then
echo "Greatest number is" $n2
else
echo "Greatest number is" $n3
fi

:wq

~$ vi greatestof3
~$ sh greatestof3
Enter three numbers
7 6 5
Greatest number is 7
~$ 
